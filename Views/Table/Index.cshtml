@model IEnumerable<AzureRetailApp.Models.CustomerEntity>

<h2>Customers</h2>

<p><a asp-action="Create" class="btn btn-primary">Add Customer</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Delete"
                       asp-route-partitionKey="@item.PartitionKey"
                       asp-route-rowKey="@item.RowKey"
                       class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
