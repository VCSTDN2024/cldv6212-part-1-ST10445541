@model IEnumerable<AzureRetailApp.Models.ProductEntity>
@{
    ViewData["Title"] = "Products";
}
<h2>Products</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Product</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th class="text-end">Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Category</td>
                <td class="text-end">@p.Price</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-danger"
                       asp-action="Delete"
                       asp-route-partitionKey="@p.PartitionKey"
                       asp-route-rowKey="@p.RowKey">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
